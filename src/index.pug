extends ./main.layout.pug

block content
    .mobile-menu
        a.mobile-menu__close
        nav.navigation
            - var navItems = ['Обо мне', 'Навыки', 'Работы', 'Отзывы']
            ul.navigation__list
                each item in navItems
                    li.navigation__list-item
                        a(href="#").navigation__list-link #{item}

        - var socials = ['insta', 'github', 'vk', 'envelope']
            ul.socials__list
                each item in socials
                    li.socials__item
                        a(href="#").socials__link
                            +icon(item, 'social-icon')
    .main-section
        section.hero
            .container.hero__container
                header.header
                    .logo
                        a(href="#").logo-link PK
                    nav.navigation
                        - var navItems = ['Обо мне', 'Навыки', 'Работы', 'Отзывы']
                        ul.navigation__list
                            each item in navItems
                                li.navigation__list-item
                                    a(href="#").navigation__list-link #{item}

                    - var socials = ['insta', 'github', 'vk', 'envelope']
                    .socials
                        ul.socials__list
                            each item in socials
                                li.socials__item
                                    a(href="#").socials__link
                                        +icon(item, 'social-icon')
                        a.menu-btn

                .author
                    .author__title Личный сайт #[br] веб разработчика
                    .author__name Ринат Кутуев

                .hero__bottom
                    button.hero__bottom-btn Скролл
        section.about
            .container.about__container
                .about-user
                    .user
                        .user__avatar
                            .user__avatar-wrapp
                                +image("content/user.jpg", "user__avatar-img")

                        -
                            var userData = [
                                ['Проживаю:', 'Бишкек'],
                                ['Возраст:', '27'],
                                ['Родился:', '19 августа 1993'],
                            ];
                        table.user__table
                            each item in userData
                                tr.user__table-row
                                    td.user__table-title #{item[0]}
                                    td.user__table-content #{item[1]}
                .about__text
                    .about__text-desc Привет, меня зовут
                    .about__text-title Ринат
                    p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                    .about__text-quote
                        | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
    .middle-section
        .triangles.middle-section__triangles-top
            svg(viewbox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--left
                polygon(points="0,0 0,100 1000,100")
            svg(viewbox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--right
                 polygon(points="0,100 1000,0 1000,100")
        section.values
            .container.values__container
                .values__inner
                    .values__title
                        .values__title-text Чем я могу быть полезен вам
                        .values__content
                            p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                    .values__widget
                        -
                            var skillsCat = [
                                ["Front-end", ['HTML5', 'CSS3', 'Javascript', 'Vue.js']],
                                ["Workflow", ['GIT', 'Terminal', 'Gulp', 'Webpack']]
                            ];

                        ul.skills
                            each category in skillsCat
                                li.skills__item
                                    .skills__row
                                        .skills__row-title #{category[0]}
                                        ul.skills__row-list
                                            each skill in category[1]
                                                li.skills__row-item
                                                    .skill
                                                        svg(viewBox="0 0 100 100").skill__circle-shape
                                                            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
                                                            circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle--layer--above
                                                            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="100%")
                                                                stop(offset="0%" stop-color="#4A00ED")
                                                                stop(offset="100%" stop-color="#7C00EA")
                                                        .skill__title #{skill}
        
        .triangles.middle-section__triangles-bottom
            svg(viewbox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--left
                polygon(points="0,0 1000,0 1000,100")
            svg(viewbox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--right
                 polygon(points="0,0 1000,0 0,100")

        section.works
            .container
                .block-title Мои работы
                .works__content
                    .works-preview
                        .works-preview__slider(data-slide="2")
                            +image('content/slide1.jpg', 'works-preview__img')
                            ul.thumbs
                                - for (var i = 3; i > 0; i--)
                                    li.thumbs__item
                                        a(href="#").thumbs__link
                                            +image('content/slide1.jpg', 'thumbs__img')
                            .works-preview__btns
                                .square-btns
                                    button(type="button").square-btns__item.square-btns__item--prev
                                    button(type="button").square-btns__item.square-btns__item--next
                                    
                    
                    .works-preview__info
                        - var tags = ["HTML", "CSS", "Javascript"]
                        ul.tags
                            each item in tags
                                li.tags__item
                                    .tag #{item}

                        .works-preview__title Сайт школы образования
                        .works-preview__text
                            p
                                | Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                        .works-preview__link
                            a(href="#" target="_blank").iconed-link Посмотреть сайт

    section.section-reviews
        .container
            .slider
                .slider__header
                    .block-title Что обо мне говорят
                    .slider__btns
                        button(type="button").slider__btn.slider__btn--pointer-prev
                        button(type="button").slider__btn.slider__btn--pointer-next
                ul.slider__content
                    li.slider__item
                        .quote
                            .quote__text
                                p Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!
                            .quote__author
                                .user-display
                                    .user-display__avatar
                                        .user-display__avatar-style
                                            +image('content/user1.jpg', 'user-display__pic')
                                    .user-display__desc
                                        .user-display__name Ковальчук Дмитрий
                                        .user-display__position Основатель Loftschool
                    li.slider__item
                        .quote
                            .quote__text
                                p Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах
                            .quote__author
                                .user-display
                                    .user-display__avatar
                                        .user-display__avatar-style
                                            +image('content/user2.jpg', 'user-display__pic')
                                    .user-display__desc
                                        .user-display__name Владимир Сабанцев
                                        .user-display__position Преподаватель
    footer.footer
        .container
            .footer__row
                .footer__col
                    .footer__info
                        .copyright &copy; 2020
                        .site-author
                            .site-author__text Ринат #[br]Кутуев
                            .site-author__desc Личный сайт #[br] веб-разработчика
                .footer__content
                    .footer__navigation
                        - var navigation = ['Обо мне', 'Навыки', 'Работы', 'Отзывы']
                        ul.footer__navigation-list
                            each item in navigation
                                li.footer__navigation-list__item
                                    a(href="#").footer__navigation-list__link #{item}
                    .footer__row
                        .footer__col
                            .footer__text Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                            .footer__socials
                                - var socials = ['insta', 'github', 'vk', 'envelope']
                                ul.footer__socials-list
                                    each item in socials
                                        li.footer__socials-item
                                            a(href="#").footer__socials-link
                                                +icon(item, 'footer__socials-icon')
                        .footer__col
                            .footer__quote
                                p Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                                .footer__quote-author Martin Golding



    

    



